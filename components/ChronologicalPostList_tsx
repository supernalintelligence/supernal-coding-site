'use client';

import React from 'react';
import { BlogPostProps } from '@/lib/getBlogPosts';
import Link from 'next/link';
import { getBlogUrl } from '@/lib/urlUtils';
import SafeContent from './SafeContent';
import ErrorBoundary from './ErrorBoundary';
import SocialShare from './SocialShare';
import { useRouter } from 'next/navigation';
import { logger } from '@/lib/logger';
import TagFilter from './TagFilter';
import Image from 'next/image';

interface ChronologicalPostListProps {
  posts: BlogPostProps[];
  rootIndex: BlogPostProps | null;
}

const ChronologicalPostList: React.FC<ChronologicalPostListProps> = ({ posts, rootIndex }) => {
  const router = useRouter();
  const [mounted, setMounted] = React.useState(false);
  const [visiblePosts, setVisiblePosts] = React.useState<BlogPostProps[]>([]);
  const [filteredPosts, setFilteredPosts] = React.useState<BlogPostProps[]>([]);
  const [page, setPage] = React.useState(1);
  const [selectedTags, setSelectedTags] = React.useState<string[]>([]);
  const postsPerPage = 10;
  
  // Wait for client-side hydration to complete
  React.useEffect(() => {
    setMounted(true);
  }, []);
  
  // Filter posts based on selected tags
  React.useEffect(() => {
    if (!mounted) return;
    
    if (selectedTags.length === 0) {
      setFilteredPosts(posts);
      return;
    }
    
    const sectionFilters = selectedTags
      .filter(tag => tag.startsWith('section:'))
      .map(tag => tag.replace('section:', ''));
    
    const tagFilters = selectedTags.filter(tag => !tag.startsWith('section:'));
    
    const filtered = posts.filter(post => {
      // Check section filters
      if (sectionFilters.length > 0) {
        if (!post.sectionName || !sectionFilters.includes(post.sectionName)) {
          return false;
        }
      }
      
      // Check tag filters
      if (tagFilters.length > 0) {
        if (!post.tags || !Array.isArray(post.tags)) {
          return false;
        }
        
        // Post must have at least one of the selected tags
        return tagFilters.some(tag => post.tags?.includes(tag));
      }
      
      return true;
    });
    
    setFilteredPosts(filtered);
    setPage(1); // Reset pagination when filters change
  }, [mounted, posts, selectedTags]);
  
  // Initialize visible posts on mount and when filtered posts change
  React.useEffect(() => {
    if (mounted && filteredPosts.length > 0) {
      setVisiblePosts(filteredPosts.slice(0, page * postsPerPage));
    }
  }, [mounted, filteredPosts, page]);
  
  // Handle scroll to load more posts
  React.useEffect(() => {
    if (!mounted) return;
    
    const handleScroll = () => {
      // Check if we're near the bottom of the page
      if (
        window.innerHeight + window.scrollY >= document.body.offsetHeight - 500 &&
        visiblePosts.length < filteredPosts.length
      ) {
        setPage(prevPage => prevPage + 1);
      }
    };
    
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, [mounted, visiblePosts.length, filteredPosts.length]);
  
  // Format date consistently
  const formatDate = (dateString: string) => {
    try {
      return new Date(dateString).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      });
    } catch (e) {
      logger.error(`Error formatting date: ${e}`);
      return dateString;
    }
  };
  
  // Handle tag selection
  const handleTagSelect = (tag: string) => {
    setSelectedTags(prev => {
      if (prev.includes(tag)) {
        return prev.filter(t => t !== tag);
      } else {
        return [...prev, tag];
      }
    });
  };
  
  // Clear all filters
  const clearFilters = () => {
    setSelectedTags([]);
  };
  
  if (!mounted) {
    return (
      <div className="flex min-h-screen w-full bg-gray-50 dark:bg-gray-900">
        <div className="flex items-center justify-center w-full">
          <div className="animate-spin rounded-full h-32 w-32 border-t-2 border-b-2 border-blue-500"></div>
        </div>
      </div>
    );
  }
  
  return (
    <ErrorBoundary fallback={
      <div className="text-center p-8 rounded-lg bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-300">
        Error loading blog posts. Please try refreshing the page.
      </div>
    }>
      <div className="max-w-6xl mx-auto px-4 py-8">
        <div className="grid grid-cols-1 lg:grid-cols-12 gap-8">
          {/* Sidebar with filters */}
          <div className="lg:col-span-3">
            <div className="sticky top-8">
              <TagFilter 
                posts={posts}
                selectedTags={selectedTags}
                onTagSelect={handleTagSelect}
                onClearFilters={clearFilters}
              />
            </div>
          </div>
          
          {/* Main content */}
          <div className="lg:col-span-9">
            {/* Root index content */}
            {rootIndex && (
              <div className="prose prose-lg max-w-none mb-12
                bg-white dark:bg-gray-800 rounded-xl p-6 md:p-8
                shadow-sm dark:shadow-[0_4px_20px_rgba(0,0,0,0.3)]
                prose-headings:text-gray-900 dark:prose-headings:text-white
                prose-p:text-gray-600 dark:prose-p:text-gray-300
                dark:prose-invert
                transition-colors duration-200
                relative"
              >
                <h1 className="text-3xl md:text-4xl font-bold mb-6 font-display">
                  {rootIndex.title}
                </h1>
                
                <ErrorBoundary fallback={<div>Error loading social share</div>}>
                  <SocialShare 
                    title={rootIndex.title || "Untitled Post"} 
                    description={rootIndex.excerpt}
                    tags={rootIndex.tags}
                  />
                </ErrorBoundary>
                
                <SafeContent html={rootIndex.htmlContent} />
              </div>
            )}
            
            {/* Filter stats */}
            <div className="mb-6">
              {selectedTags.length > 0 ? (
                <p className="text-gray-600 dark:text-gray-400">
                  Showing {filteredPosts.length} posts matching your filters
                </p>
              ) : (
                <p className="text-gray-600 dark:text-gray-400">
                  Showing all {posts.length} posts
                </p>
              )}
            </div>
            
            {/* Chronological post list */}
            {visiblePosts.length > 0 ? (
              <div className="space-y-8">
                {visiblePosts.map(post => (
                  <article 
                    key={post.slug}
                    className="bg-white dark:bg-gray-800 rounded-xl overflow-hidden
                      shadow-sm hover:shadow-md dark:shadow-[0_4px_20px_rgba(0,0,0,0.3)]
                      transition-all duration-300 transform hover:-translate-y-1
                      flex flex-col md:flex-row"
                  >
                    {/* Cover image (if available) */}
                    {post.coverImage && (
                      <div className="md:w-1/3 relative">
                        <div className="aspect-w-16 aspect-h-9 md:h-full">
                          <Image 
                            src={post.coverImage}
                            alt={post.title}
                            className="object-cover"
                            fill
                          />
                        </div>
                      </div>
                    )}
                    
                    {/* Content */}
                    <div className={`p-6 flex flex-col ${post.coverImage ? 'md:w-2/3' : 'w-full'}`}>
                      <div className="flex flex-wrap items-center gap-3 mb-3 text-sm">
                        {/* Section badge */}
                        {post.sectionId && post.sectionName && (
                          <Link 
                            href={`/${post.sectionId}`}
                            className="px-3 py-1 rounded-full 
                              bg-blue-100 dark:bg-blue-900/30
                              text-blue-800 dark:text-blue-300
                              font-medium hover:bg-blue-200 dark:hover:bg-blue-800/50
                              transition-colors"
                          >
                            {post.sectionName}
                          </Link>
                        )}
                        
                        {/* Date */}
                        <time className="text-gray-500 dark:text-gray-400">
                          {formatDate(post.date)}
                        </time>
                      </div>
                      
                      <h2 className="text-2xl font-bold mb-3 text-gray-900 dark:text-white font-display">
                        <Link href={getBlogUrl(post)} className="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                          {post.title || 'Untitled'}
                        </Link>
                      </h2>
                      
                      <div className="prose prose-sm dark:prose-invert mb-4 flex-grow">
                        <SafeContent html={post.excerpt} />
                      </div>
                      
                      <div className="mt-auto">
                        {/* Categories */}
                        {post.categories?.length > 0 && (
                          <div className="flex flex-wrap gap-2 mb-4">
                            {post.categories.map((category, index) => (
                              <span
                                key={`${post.slug}-${category}-${index}`}
                                className="px-2 py-1 text-xs rounded-full 
                                  bg-gray-100 dark:bg-gray-700 
                                  text-gray-800 dark:text-gray-300"
                              >
                                {category}
                              </span>
                            ))}
                          </div>
                        )}
                        
                        {/* Tags */}
                        {post.tags && post.tags.length > 0 && (
                          <div className="flex flex-wrap gap-2 mb-4">
                            {post.tags.map((tag, index) => (
                              <button
                                key={`${post.slug}-${tag}-${index}`}
                                onClick={() => handleTagSelect(tag)}
                                className={`px-2 py-1 text-xs rounded-full 
                                  ${selectedTags.includes(tag)
                                    ? 'bg-blue-500 text-white'
                                    : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'
                                  }`}
                              >
                                #{tag}
                              </button>
                            ))}
                          </div>
                        )}
                        
                        <Link 
                          href={getBlogUrl(post)}
                          className="inline-flex items-center text-blue-600 dark:text-blue-400 
                            hover:text-blue-800 dark:hover:text-blue-300 font-medium"
                        >
                          Read more
                          <svg className="w-4 h-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fillRule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clipRule="evenodd" />
                          </svg>
                        </Link>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            ) : (
              <div className="text-center p-12 bg-white dark:bg-gray-800 rounded-xl">
                <h3 className="text-xl font-medium text-gray-900 dark:text-white mb-2">No posts found</h3>
                <p className="text-gray-600 dark:text-gray-400">
                  {selectedTags.length > 0 
                    ? 'Try adjusting your filters to see more posts.' 
                    : 'There are no posts available at this time.'}
                </p>
                {selectedTags.length > 0 && (
                  <button
                    onClick={clearFilters}
                    className="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                  >
                    Clear all filters
                  </button>
                )}
              </div>
            )}
            
            {/* Load more button */}
            {visiblePosts.length < filteredPosts.length && (
              <div className="flex justify-center my-8">
                <button
                  onClick={() => setPage(prevPage => prevPage + 1)}
                  className="px-6 py-3 bg-blue-600 text-white rounded-lg
                    hover:bg-blue-700 transition-colors shadow-md"
                >
                  Load More
                </button>
              </div>
            )}
          </div>
        </div>
      </div>
    </ErrorBoundary>
  );
};

export default ChronologicalPostList; 